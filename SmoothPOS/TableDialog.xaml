<Window x:Class="SmoothPOS.TableDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmoothPOS"
        mc:Ignorable="d"
        Title="Table Name" Height="100" Width="300"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label Content="Table Name:"
               VerticalAlignment="Center"
               FontSize="20"
               Grid.Column="0"></Label>
        <StackPanel  Grid.Column="1">
            <TextBox x:Name="txtTableName"
                     Width="auto"
                     Height="30"
                     Margin="5"
                     Grid.Column="1"
                     FontSize="25"></TextBox>
            <Button x:Name="btnAddName"
                    Content="Add"
                    Width="auto"
                    Height="25"
                    Margin="5,0,5,5"
                    Click="BtnAddName_Click"></Button>
        </StackPanel>

    </Grid>
</Window>
